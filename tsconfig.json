{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build",
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es6",
      "dom"
    ],
    "sourceMap": true,
    "allowJs": false,
    "esModuleInterop": true,
    "jsx": "preserve",
    "rootDirs": ["src", "pages", "styles"],
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@components/*": ["src/components/*"],
      "@modules/*": ["src/modules/*"],
      "@styles/*": ["styles/*"],
      "@utils/*": ["src/utils/*"],
      "@context/*": ["src/context/*"]
    },
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": [
    "node_modules",
    "build",
    "webpack",
    "jest",
    "scripts",
    "cypress",
    "config",
    "coverage",
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx", 
    "styles/GlobalStyle.ts"
  ]
}